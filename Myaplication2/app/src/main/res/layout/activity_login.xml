<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="227dp"
        android:layout_height="217dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:src="@drawable/logo_transparent"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/ColorLinea"
        android:ems="8"
        android:hint="User"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/ColorLinea"
        android:textSize="24sp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/etcontra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/ColorLinea"
        android:ems="8"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/ColorLinea"
        android:textSize="24sp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btsignin"
        android:layout_width="237dp"
        android:layout_height="79dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/ColorLinea"
        android:onClick="login"
        android:text="Log in"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/Colorletrabtn"
        app:fontFamily="@font/baloo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btinvitado"
            android:layout_width="172dp"
            android:layout_height="64dp"
            android:backgroundTint="@color/Colorbtn"
            android:onClick="toRegPersAct"
            android:text="Invited"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/Colorletrabtn"
            app:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/btregistrar"
            android:layout_width="168dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/Colorbtn"
            android:onClick="Registrar"
            android:text="Sing up"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/Colorletrabtn"
            app:fontFamily="@font/baloo"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>


</ScrollView>
